                <gateway-shell.version>0.5.0.2.2.9.9-2</gateway-shell.version>
                <hadoop.major>2.6</hadoop.major>
            </properties>
        </profile>
        <profile>
            <id>2.7</id>
            <properties>
                <hadoop.version>2.7.3.2.6.5.0-292</hadoop.version>
                <gateway-shell.version>0.12.0.2.6.5.0-292</gateway-shell.version>
                <hadoop.major>2.7</hadoop.major>
            </properties>
        </profile>
        <profile>
            <id>3.1</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <hadoop.version>3.1.1.3.1.0.0-78</hadoop.version>
                <gateway-shell.version>1.0.0.3.1.0.0-78</gateway-shell.version>
                <hadoop.major>3.1</hadoop.major>
            </properties>
        </profile>
    </profiles>
</project>
